<Window x:Class="algos_base.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Manager" Height="450" Width="800">
    <Grid>
        <!-- Navigation Panel -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Button Content="Task 1: Sorting" Width="150" Margin="10" Click="OpenTask1"/>
            <Button Content="Task 2: External Sorting" Width="150" Margin="10" Click="OpenTask2"/>


        </StackPanel>

        <!-- Content Area -->
        <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" Margin="10,50,10,10"/>
    </Grid>
</Window>
